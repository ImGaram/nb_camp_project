<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/premium_item_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_image_radius"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/premium_item_app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/premium_item_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/premium_item_app_icon"
        app:layout_constraintTop_toTopOf="@+id/premium_item_app_icon"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/premium_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/premium_item_star_rate"
        app:layout_constraintEnd_toEndOf="@+id/premium_item_app_title"
        app:layout_constraintStart_toStartOf="@+id/premium_item_app_title"
        app:layout_constraintTop_toBottomOf="@+id/premium_item_app_title" />

    <TextView
        android:id="@+id/premium_item_star_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/premium_item_app_icon"
        app:layout_constraintStart_toStartOf="@+id/premium_item_description"
        app:layout_constraintTop_toBottomOf="@+id/premium_item_description" />

    <TextView
        android:id="@+id/premium_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/premium_item_star_rate"
        app:layout_constraintEnd_toEndOf="@+id/premium_item_description"
        app:layout_constraintStart_toEndOf="@+id/premium_item_star_rate"
        app:layout_constraintTop_toTopOf="@+id/premium_item_star_rate" />
</androidx.constraintlayout.widget.ConstraintLayout>