<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/popular_item_rank_text"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/popular_item_app_icon_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_image_radius"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popular_item_rank_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popular_item_app_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/popular_item_app_category_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popular_item_app_icon_image"
        app:layout_constraintTop_toTopOf="@+id/popular_item_app_icon_image"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/popular_item_app_category_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/popular_item_app_star_rating_text"
        app:layout_constraintEnd_toEndOf="@+id/popular_item_app_title_text"
        app:layout_constraintStart_toStartOf="@+id/popular_item_app_title_text"
        app:layout_constraintTop_toBottomOf="@+id/popular_item_app_title_text" />

    <TextView
        android:id="@+id/popular_item_app_star_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/popular_item_app_icon_image"
        app:layout_constraintStart_toStartOf="@+id/popular_item_app_category_text"
        app:layout_constraintTop_toBottomOf="@+id/popular_item_app_category_text" />

    <TextView
        android:id="@+id/popular_item_app_event_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/popular_item_app_star_rating_text"
        app:layout_constraintEnd_toEndOf="@+id/popular_item_app_category_text"
        app:layout_constraintStart_toEndOf="@+id/popular_item_app_star_rating_text"
        app:layout_constraintTop_toTopOf="@+id/popular_item_app_star_rating_text" />
</androidx.constraintlayout.widget.ConstraintLayout>