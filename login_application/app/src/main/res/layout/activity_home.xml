<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/image_home_title"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_margin="40dp"
        android:contentDescription="home title image"
        android:src="@drawable/title_sign_in_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="아이디: "
        android:textSize="23sp"
        app:layout_constraintEnd_toStartOf="@+id/text_home_id_value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_home_title" />

    <TextView
        android:id="@+id/text_home_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caramm"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_home_id_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_home_id_title"
        app:layout_constraintTop_toTopOf="@+id/text_home_id_title" />

    <TextView
        android:id="@+id/text_home_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름: "
        android:textSize="23sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/text_home_name_value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home_id_title" />

    <TextView
        android:id="@+id/text_home_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caramm"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_home_name_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_home_name_title"
        app:layout_constraintTop_toTopOf="@+id/text_home_name_title" />

    <TextView
        android:id="@+id/text_home_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이: "
        android:textSize="23sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/text_home_age_value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home_name_title" />

    <TextView
        android:id="@+id/text_home_age_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_home_age_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_home_age_title"
        app:layout_constraintTop_toTopOf="@+id/text_home_age_title" />

    <TextView
        android:id="@+id/text_home_mbti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBTI: "
        android:textSize="23sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/text_home_mbti_value"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home_age_title" />

    <TextView
        android:id="@+id/text_home_mbti_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISTJ"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_home_mbti_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_home_mbti_title"
        app:layout_constraintTop_toTopOf="@+id/text_home_mbti_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_home_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_home_finish_button"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/image_home_title"
        app:layout_constraintStart_toStartOf="@+id/image_home_title">

        <ImageView
            android:id="@+id/button_icon_home_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home_finish_burtton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/button_text_home_finish"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_text_home_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료"
            android:textColor="@drawable/text_color_home_finish_button"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_icon_home_finish"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>